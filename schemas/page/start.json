{
  "$id": "http://gov.uk/schema/v1.0.0/page/start",
  "_name": "page.start",
  "title": "Start page",
  "description": "Let users start using a service",
  "type": "object",
  "properties": {
    "_id": {
      "const": "page.start"
    },
    "_type": {
      "const": "page.start"
    },
    "before_you_start": {
      "title": "Before you start",
