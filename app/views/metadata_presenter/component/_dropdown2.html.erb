<%= f.govuk_text_field component.text_input["_id"].to_sym,
  label: { text: component.text_input["label"] },
  hint: { text: component.text_input["hint"] },
  name: "answers[#{component.text_input["_id"]}]",
  value: component.text_input["value"],
  placeholder: component.text_input["placeholder"]
%>

